<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
>
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:id="@+id/text_rank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/font_22"
                android:textStyle="bold"
                android:padding="@dimen/dp_10"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/cover_image"

        />


        <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/cover_image"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                app:viewAspectRatio="1.43"
                app:roundedCornerRadius="@dimen/dp_4"
                android:scaleType="centerCrop"
                app:placeholderImageScaleType="centerInside"
                app:placeholderImage="@drawable/ic_live_no_face"
                android:layout_margin="5dp"
                android:layout_centerVertical="true"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/text_rank"
                app:layout_constraintRight_toLeftOf="@id/ll_detail"
                app:layout_constraintVertical_bias="0.5"
        />
        <LinearLayout
                android:id="@+id/ll_detail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_toRightOf="@id/cover_image"
                android:layout_margin="5dp"
                app:layout_constraintLeft_toRightOf="@id/cover_image"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.5"
        >
            <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/user_name_text_size"
                    android:textColor="@color/black_alpha_176"
                    tools:text="ha哈哈大ha哈哈大ha哈哈大ha哈哈大ha哈哈大ha哈哈大ha哈哈大ha哈哈大ha哈哈大"
                    android:maxLines="2"
                    android:ellipsize="end"
            />
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_margin="2dp"
            >
                <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        app:srcCompat="@drawable/ic_img_up_name"
                        android:layout_margin="2dp"
                />
                <TextView
                        android:id="@+id/up_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/TextMessage"
                />

            </LinearLayout>

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
            >
                <TextView
                        android:id="@+id/grade"
                        style="@style/TextMessage"
                        tools:text="综合评分：22222"
                />

                <ImageView
                        android:id="@+id/more"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_img_more_menu"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                />
            </RelativeLayout>
        </LinearLayout>
    </android.support.constraint.ConstraintLayout>
    <LinearLayout
            android:id="@+id/root_show_all"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
    >
        <TextView
                android:id="@+id/text_show_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/show_all_ranking_list_video"
                android:drawablePadding="@dimen/dp_4"
                android:textSize="@dimen/font_14"
                android:textColor="@color/colorPrimary"
                android:drawableTint="@color/colorPrimary"
                android:drawableRight="@drawable/ic_arrow_down_gray_round"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/ripple_background"
                android:padding="@dimen/dp_4"
                android:visibility="gone"
                tools:visibility="visible"
        />
    </LinearLayout>
    <ImageView
            style="@style/between_line"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
    />
</LinearLayout>