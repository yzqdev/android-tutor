<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:padding="@dimen/dp_4"
        android:elevation="@dimen/dp_4"
        android:orientation="vertical"
        android:background="@color/white"
>
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

    >
        <ImageView
                android:id="@+id/image_color"
                style="@style/image_small"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
        />
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@id/image_color"
                app:layout_constraintRight_toLeftOf="@id/button_pay"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:orientation="vertical"
                android:gravity="center_vertical"
                app:layout_constraintHorizontal_bias="0.02"
                app:layout_constraintVertical_bias="0.5"
                android:layout_marginLeft="@dimen/dp_10"
        >
            <TextView
                    android:id="@+id/text_theme_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="少女粉"
                    style="@style/TextTitle"
                    app:layout_constraintLeft_toRightOf="@id/image_color"
                    app:layout_constraintTop_toTopOf="parent"
            />
            <TextView
                    android:id="@+id/text_theme_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5硬币/月"
                    style="@style/TextMessage"
                    android:visibility="gone"
                    tools:visibility="visible"
            />
        </LinearLayout>

        <Button
                android:id="@+id/button_pay"
                android:layout_width="@dimen/button_width"
                android:layout_height="@dimen/button_height"
                android:text="订阅"
                android:textColor="@color/colorPrimary"
                android:background="@drawable/register_button_background"
                app:layout_constraintRight_toLeftOf="@id/image_choose"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginRight="@dimen/dp_10"
                android:visibility="gone"
                tools:visibility="visible"
        />
        <ImageView
                android:id="@+id/image_choose"
                style="@style/image_small"
                android:src="@drawable/ic_upper_choose"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginRight="8dp"
                android:visibility="gone"
                tools:visibility="visible"
                android:backgroundTint="@color/colorPrimary"
        />
    </android.support.constraint.ConstraintLayout>
    <ImageView
            style="@style/between_line"
            android:layout_marginTop="@dimen/dp_4"
    />
</LinearLayout>

