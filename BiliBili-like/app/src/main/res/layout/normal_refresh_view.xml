<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
>
    <com.flyco.tablayout.CommonTabLayout
            android:id="@+id/tablayout"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            app:tl_textSelectColor="@color/colorPrimary"
            app:tl_textUnselectColor="@color/grey_500"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            app:tl_tab_padding="@dimen/dp_10"
            app:tl_indicator_style="BLOCK"
            app:tl_indicator_color="@color/black_alpha_32"
            android:visibility="gone"
            app:tl_iconVisible="false"
            app:tl_indicator_corner_radius="@dimen/dp_4"

    />
    <com.bilibili.lingxiao.widget.skin.SmartSkinRefreshLayout
            android:id="@+id/refresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srlPrimaryColor="@color/colorPrimary"
    >
        <com.scwang.smartrefresh.header.WaterDropHeader
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <com.bilibili.lingxiao.widget.ScrollerloadRecyclerView
                android:id="@+id/recycerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
        </com.bilibili.lingxiao.widget.ScrollerloadRecyclerView>
        <include
                layout="@layout/footer_loadmore"/>
    </com.bilibili.lingxiao.widget.skin.SmartSkinRefreshLayout>
</LinearLayout>