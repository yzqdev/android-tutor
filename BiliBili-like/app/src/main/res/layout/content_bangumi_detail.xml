<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_bangumi_detail"
        android:orientation="vertical"
>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:layout_marginTop="@dimen/dp_40"
            android:orientation="vertical"
    >
        <LinearLayout
                android:id="@+id/ll_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toTopOf="parent"

                android:layout_marginLeft="@dimen/dp_10"
                app:layout_constraintLeft_toLeftOf="parent"
        >
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bangumi_season_title_background_first"
                    android:text="TV"
                    style="@style/TextTitle"
                    android:gravity="center"
                    android:elevation="@dimen/dp_4"
            />
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bangumi_season_title_background_last"
                    android:text="僅港澳台"
                    style="@style/TextTitle"
                    android:gravity="center"
                    android:elevation="@dimen/dp_4"
            />
        </LinearLayout>
        <android.support.constraint.ConstraintLayout
                android:id="@+id/cons_history"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:elevation="2dp"
                app:layout_constraintTop_toBottomOf="@id/ll_category"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_margin="@dimen/dp_10"
                android:visibility="gone"
                tools:visibility="visible"
                >
            <TextView
                    style="@style/TextTitle"
                    android:text="上次观看到第2话"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:padding="6dp"
            />
            <TextView
                    style="@style/TextTitle"
                    android:text="继续观看"
                    android:textColor="@color/colorPrimary"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:padding="6dp"
            />
        </android.support.constraint.ConstraintLayout>
        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/cons_history"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="@dimen/dp_10"
        >
            <TextView
                    style="@style/TextTitle"
                    android:text="选集"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/recycler_select_set"
                    android:padding="6dp"
                    android:layout_marginLeft="@dimen/dp_10"
            />
            <TextView
                    android:id="@+id/text_count"
                    style="@style/TextTitle"
                    android:text="13话全"
                    android:textColor="@color/black_alpha_112"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/recycler_select_set"
                    android:padding="6dp"
                    android:drawableRight="@drawable/ic_img_right"
                    android:layout_marginRight="@dimen/dp_4"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/ripple_background"
            />
            <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler_select_set"
                    app:layout_constraintTop_toBottomOf="@id/text_count"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
            </android.support.v7.widget.RecyclerView>
            <include
                    android:id="@+id/content_bangumi_contract"
                    layout="@layout/content_bangumi_contract"
                    app:layout_constraintTop_toBottomOf="@id/recycler_select_set"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_4"
            />
            <ImageView
                    android:id="@+id/between_line1"
                    style="@style/between_line"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/content_bangumi_contract"
                    android:layout_marginTop="@dimen/dp_10"
            />
            <TextView
                    style="@style/TextTitle"
                    android:text="简介"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/between_line1"
                    android:padding="6dp"
                    android:layout_marginLeft="@dimen/dp_10"
            />
            <TextView
                    android:id="@+id/text_more"
                    style="@style/TextTitle"
                    android:text="更多"
                    android:textColor="@color/black_alpha_112"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/between_line1"
                    android:padding="6dp"
                    android:drawableRight="@drawable/ic_img_right"
                    android:layout_marginRight="@dimen/dp_10"
                    android:background="@drawable/ripple_background"
            />
            <TextView
                    android:id="@+id/text_evaluate"
                    style="@style/TextMessage"
                    android:text="@string/bangumi_evaluate_default"
                    app:layout_constraintTop_toBottomOf="@id/text_more"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:maxLines="3"
                    android:ellipsize="end"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_width="0dp"/>
            <com.bilibili.lingxiao.widget.ColorTextView
                    android:id="@+id/type_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    app:ctvBackground="@color/white"
                    app:ctvCornerSize="40"
                    app:ctvMargin="3dp"
                    app:ctvText="游戏"
                    app:ctvTextColor="@color/black_alpha_144"
                    app:ctvTextSize="14sp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:elevation="@dimen/dp_10"
                    app:layout_constraintTop_toBottomOf="@id/text_evaluate"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_goneMarginLeft="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_10"
            />
            <ImageView
                    android:id="@+id/between_line2"
                    style="@style/between_line"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/type_name"
                    android:layout_marginTop="@dimen/dp_10"
            />
            <TextView
                    style="@style/TextTitle"
                    android:text="更多推荐"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/between_line2"
                    android:padding="6dp"
                    android:layout_marginLeft="@dimen/dp_10"

            />
            <TextView
                    android:id="@+id/text_refresh_recommend"
                    style="@style/TextMessage"
                    android:text="换一换"
                    android:textColor="@color/black_alpha_112"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/between_line2"
                    android:padding="6dp"
                    android:gravity="center"
                    android:drawableRight="@drawable/ic_bangumi_refresh_pink"
                    android:backgroundTint="@color/colorPrimary"
                    android:layout_marginRight="@dimen/dp_10"
                    android:background="@drawable/ripple_background"
            />
            <com.bilibili.lingxiao.widget.ScrollerloadRecyclerView
                    android:id="@+id/recycler_recommend"
                    app:layout_constraintTop_toBottomOf="@id/text_refresh_recommend"
                    app:layout_constraintBottom_toTopOf="@id/between_line3"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
            >
            </com.bilibili.lingxiao.widget.ScrollerloadRecyclerView>
            <ImageView
                    android:id="@+id/between_line3"
                    style="@style/between_line"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/recycler_recommend"
                    android:layout_marginTop="@dimen/dp_10"
            />
        </android.support.constraint.ConstraintLayout>

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>