<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".home.find.ui.SearchDetailActivity">
    <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="0dp"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:layout_scrollFlags="scroll|enterAlways|snap"
            app:contentInsetStart="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tablayout"
    >
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_margin="@dimen/dp_10"
        >
            <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_weight="8"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="@dimen/len_16"
            >
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_margin="@dimen/len_4"
                >
                    <!--<ImageView
                            style="@style/image_small"
                            app:srcCompat="@drawable/ic_img_search"
                            android:tint="@color/black_alpha_112"
                    />
                    <EditText
                            android:id="@+id/edit_text"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:hint="@string/search_everyone"
                            android:background="@null"
                            android:textColor="@color/black_alpha_160"
                            android:textColorHint="@color/black_alpha_112"
                            android:textSize="@dimen/font_14"
                    />-->
                    <ImageView
                            android:id="@+id/close"
                            style="@style/image_small"
                            android:src="@drawable/ic_toolbar_menu_search"
                            android:tint="@color/black_alpha_112"
                            android:layout_margin="@dimen/dp_4"
                    />
                    <android.support.v7.widget.SearchView
                            android:id="@+id/searchview"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            app:queryHint="@string/search_everyone"
                            style="@style/SearchView"
                    >

                    </android.support.v7.widget.SearchView>

                    <!--<ImageView
                            android:id="@+id/close"
                            style="@style/image_small"
                            android:src="@drawable/ic_search_close"
                    />-->
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <TextView
                    android:id="@+id/text_cancel"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="@string/cancel"
                    android:padding="@dimen/dp_4"
                    android:layout_marginLeft="@dimen/dp_4"
                    android:background="@drawable/ripple_background"
            />
        </LinearLayout>

    </android.support.v7.widget.Toolbar>
    <com.bilibili.lingxiao.widget.skin.SkinTabLayout
            android:id="@+id/tablayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foreground="?android:attr/selectableItemBackground"
            app:tabTextColor="@color/white"
            app:tabGravity="fill"
            app:tabMode="scrollable"
            android:background="@color/colorPrimary"
            app:tabIndicatorColor="@color/colorPrimary"
            app:tabMaxWidth="0dp"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            app:layout_constraintBottom_toTopOf="@id/common_tablayout"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
    >
    </com.bilibili.lingxiao.widget.skin.SkinTabLayout>
    <com.flyco.tablayout.CommonTabLayout
            android:id="@+id/common_tablayout"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            app:tl_textSelectColor="@color/colorPrimary"
            app:tl_textUnselectColor="@color/grey_500"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            app:tl_tab_padding="@dimen/dp_10"
            app:tl_indicator_style="BLOCK"
            app:tl_indicator_color="@color/black_alpha_32"
            app:tl_iconVisible="true"
            app:tl_iconGravity="RIGHT"
            app:tl_indicator_corner_radius="@dimen/dp_4"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tablayout"
            app:layout_constraintBottom_toTopOf="@id/viewpager"
    >
    </com.flyco.tablayout.CommonTabLayout>
    <android.support.v4.view.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/common_tablayout"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
    >
    </android.support.v4.view.ViewPager>
</android.support.constraint.ConstraintLayout>