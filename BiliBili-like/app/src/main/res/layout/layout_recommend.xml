<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
>

        <ImageView
                android:id="@+id/image_recommend"
                style="@style/image_normal"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/recycerView"
                android:src="@drawable/live_home_follow_anchor"
        />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="推荐直播"
                android:layout_margin="5dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/recycerView"
                app:layout_constraintLeft_toRightOf="@id/image_recommend"
        />
        <TextView
                android:id="@+id/live_recommend_refresh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="换一换"
                style="@style/TextMessage"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:drawableRight="@drawable/ic_bangumi_refresh_pink"
                android:layout_marginRight="5dp"
                android:padding="5dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/recycerView"
        />

        <android.support.v7.widget.RecyclerView
                android:id="@+id/recycerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/image_recommend"
        >
        </android.support.v7.widget.RecyclerView>
        <TextView
                android:id="@+id/live_recommend_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="更多个推荐直播 >"
                android:padding="5dp"
                android:layout_margin="5dp"
                android:textColor="@color/colorPrimary"
                app:layout_constraintTop_toBottomOf="@id/recycerView"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
        />
    <ImageView
            style="@style/between_line"
            app:layout_constraintTop_toBottomOf="@id/live_recommend_more"
            android:layout_marginTop="5dp"
    />
</android.support.constraint.ConstraintLayout >