<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
>
    <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/cover_image"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            app:viewAspectRatio="1.43"
            app:roundedCornerRadius="@dimen/dp_4"
            android:scaleType="centerCrop"
            app:placeholderImageScaleType="centerInside"
            app:placeholderImage="@drawable/ic_live_no_face"
            android:layout_margin="5dp"
            android:layout_centerVertical="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/ll_detail"
            app:layout_constraintVertical_bias="0.5"
    />
    <LinearLayout
            android:id="@+id/ll_detail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@id/cover_image"
            android:layout_margin="5dp"
            app:layout_constraintLeft_toRightOf="@id/cover_image"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.5"
    >
        <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/user_name_text_size"
                tools:text="ha哈哈大ha哈哈大ha哈哈大ha哈哈大ha哈哈大ha哈哈大ha哈哈大ha哈哈大ha哈哈大"
                android:maxLines="2"
                android:ellipsize="end"
        />
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_margin="2dp"
        >
            <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    app:srcCompat="@drawable/ic_img_up_name"
                    android:layout_margin="2dp"
            />
            <TextView
                    android:id="@+id/up_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextMessage"
            />

        </LinearLayout>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
        >
            <LinearLayout
                    android:id="@+id/ll_play"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="1dp"
                    android:gravity="center_vertical"
                    android:layout_centerVertical="true"
            >
                <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        app:srcCompat="@drawable/ic_img_play_number"
                        android:layout_margin="2dp"
                        android:tint="@color/black_alpha_64"
                />
                <TextView
                        android:id="@+id/play_num"
                        style="@style/TextMessage"
                        tools:text="14.1万"
                />
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/ll_damku"
                    android:layout_toRightOf="@id/ll_play"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="1dp"
                    android:gravity="center_vertical"
                    android:layout_centerVertical="true"
            >
                <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        app:srcCompat="@drawable/ic_img_danmaku_number"
                        android:tint="@color/black_alpha_64"
                        android:layout_margin="2dp"

                />
                <TextView
                        android:id="@+id/damku_num"
                        style="@style/TextMessage"
                        tools:text="14.1万"
                />
                <TextView
                        android:id="@+id/av_num"
                        style="@style/TextMessage"
                        android:text="        "
                />
            </LinearLayout>
            <ImageView
                    android:id="@+id/more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_img_more_menu"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
            />
        </RelativeLayout>
    </LinearLayout>
    <ImageView
            style="@style/between_line"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_below="@id/ll_detail"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
    />
</android.support.constraint.ConstraintLayout>