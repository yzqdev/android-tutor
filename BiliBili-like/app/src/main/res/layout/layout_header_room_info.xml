<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
    >
        <com.facebook.drawee.view.SimpleDraweeView
                android:layout_width="45dp"
                android:layout_height="45dp"
                app:progressBarImageScaleType="centerInside"
                app:progressBarImage="@drawable/ic_img_user_head_default"
                app:roundAsCircle="true"
                app:roundingBorderWidth="1dp"
                android:layout_margin="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.5"
                android:id="@+id/image_header"/>
        <android.support.constraint.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@id/image_header"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_margin="5dp"
        >
            <LinearLayout
                    android:id="@+id/ll_up"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
            >
                <TextView
                        android:id="@+id/up_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="海带Monster"
                        style="@style/TextTitle"

                />
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/mall_mine_vip_level_6"
                        android:layout_marginLeft="5dp"
                />
            </LinearLayout>
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/ll_up"
            >
                <TextView
                        android:id="@+id/people_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="人气：798"
                        style="@style/TextTitle"

                />
                <TextView
                        android:id="@+id/fensi_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="粉丝：798"
                        style="@style/TextTitle"
                        android:layout_marginLeft="5dp"
                />
                <TextView
                        android:id="@+id/category"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/TextTitle"
                        android:layout_marginLeft="5dp"
                />
            </LinearLayout>
        </android.support.constraint.ConstraintLayout>
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/button_height"
                android:background="@color/colorPrimary"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginRight="5dp"
        >
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_add_follow"
                    android:layout_marginLeft="10dp"
            />
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="关注"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="10dp"
            />
        </LinearLayout>

    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>