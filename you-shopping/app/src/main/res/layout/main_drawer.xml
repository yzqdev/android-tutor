<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/jianbian_bg1">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        >

        <TextView
            android:id="@+id/drwer_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="username"
            android:textColor="@color/white"
            android:textSize="28sp"
            android:textStyle="bold" />

    </RelativeLayout>

     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="导航"
         android:layout_margin="20dp"
         android:textSize="16sp"
         android:textColor="@color/nav_normal"
         android:textStyle="bold"/>

    <Button
        android:id="@+id/drawer_btn_fpage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="首页"
        android:paddingLeft="20dp"
        android:drawablePadding="40dp"
        android:gravity="start|center_vertical"
        android:textColor="@color/nav_normal"
        android:background="@color/white"
        android:drawableLeft="@mipmap/icon_home_nor"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/whitesmoke" />
    <Button
        android:id="@+id/drawer_btn_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="分类"
        android:drawablePadding="40dp"
        android:gravity="start|center_vertical"
        android:paddingLeft="20dp"
        android:background="@color/white"
        android:textColor="@color/nav_normal"
        android:drawableLeft="@mipmap/icon_category_nor"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/whitesmoke" />
    <Button
        android:id="@+id/drawer_btn_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="我的"
        android:paddingLeft="20dp"
        android:drawablePadding="40dp"
        android:gravity="start|center_vertical"
        android:background="@color/white"
        android:textColor="@color/nav_normal"
        android:drawableLeft="@mipmap/icon_mine_nor"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="账户"
        android:layout_margin="20dp"
        android:textSize="16sp"
        android:textColor="@color/nav_normal"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/drawer_btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="登录"
        android:paddingLeft="20dp"
        android:drawablePadding="40dp"
        android:gravity="start|center_vertical"
        android:textColor="@color/nav_normal"
        android:background="@color/white"
        android:drawableLeft="@mipmap/login"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/whitesmoke" />
    <Button
        android:id="@+id/drawer_btn_reg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="注册"
        android:drawablePadding="40dp"
        android:gravity="start|center_vertical"
        android:paddingLeft="20dp"
        android:background="@color/white"
        android:textColor="@color/nav_normal"
        android:drawableLeft="@mipmap/signup"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/whitesmoke" />
    <Button
        android:id="@+id/drawer_btn_cancle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="注销"
        android:paddingLeft="20dp"
        android:drawablePadding="40dp"
        android:gravity="start|center_vertical"
        android:background="@color/white"
        android:textColor="@color/nav_normal"
        android:drawableLeft="@mipmap/logout"
        />



</LinearLayout>