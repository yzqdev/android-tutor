<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".TypeFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="15dp">

        <ImageView
            android:id="@+id/frag_type_scan_iv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingRight="20dp"
            android:src="@drawable/scan_iv" />

        <EditText
            android:id="@+id/frag_type_sc_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/frag_type_scan_iv"
            android:background="@drawable/et_bg"
            android:drawableLeft="@drawable/search_iv"
            android:layout_toLeftOf="@id/frag_type_mes_iv"
            android:imeOptions="actionSearch"
            android:singleLine="true"
            android:hint="搜索你感兴趣的商品"
            android:textColor="@color/nav_normal"
            android:textColorHint="@color/nav_normal" />

        <ImageView
            android:id="@+id/frag_type_mes_iv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="20dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/mes_iv" />
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ListView
            android:id="@+id/frag_type_listv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/whitesmoke"
            android:divider="@color/white"
            android:dividerHeight="5dp" />

        <LinearLayout
            android:id="@+id/frag_type_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical" />


    </LinearLayout>

</LinearLayout>