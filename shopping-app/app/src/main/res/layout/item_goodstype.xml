<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="10dp">

    <ImageView
        android:id="@+id/item_goodstype_iv"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@mipmap/icon" />

    <TextView
        android:id="@+id/item_goodstype_tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:singleLine="true"
        android:layout_marginLeft="10dp"
        android:text="农夫三拳"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_toRightOf="@id/item_goodstype_iv"
        />


    <TextView
        android:id="@+id/item_goodstype_tv_des"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_goodstype_tv_title"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/item_goodstype_iv"
        android:ellipsize="end"
        android:maxLines="4"
        android:text="xxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
        android:textSize="11dp"
        android:layout_marginRight="20dp"
        android:textColor="@color/black"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/item_goodstype_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        android:text="￥1.00元"
        android:textColor="@color/red"
        android:textStyle="normal"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>